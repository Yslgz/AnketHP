@using Anket.ViewModels
@{
    Layout = "_LayoutAdmin";
}
@model SurveyModel
@section CardHeader {
    <span>Anket Ekle</span>
}

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Survey" asp-action="Add" method="post">

            <div class="mb-2">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span class="text-danger" asp-validation="Title"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Questions"></label>
                <input asp-for="Questions" class="form-control" />
                <span class="text-danger" asp-validation="Questions"></span>
            </div>

            <div class="mb-2">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
                    <opotion value="">Seçiniz</opotion>
                </select>
            </div>

            <div class="mb-2">
                <input asp-for="IsActive" class="form-check-inline" />
                <label asp-for="IsActive"></label>
                <span class="text-danger" asp-validation-for="IsActive"></span>
            </div>
            <div class="mb-2">
                <input type="submit" value="Kaydet" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
